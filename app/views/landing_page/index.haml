.row.section_wrapper{style:'height: 800px'}
  %h1.section_header_dark Describe Your Project
  .container
    %hr
  %br\
  .col-sm-6.col-lg-offset-2.col-lg-4
    .thumbnail
      .circle_hover
        = image_tag("home.svg", size:'120x120')
      .caption
        %h3 Residential
        .table_wrapper{style:'overflow: auto'}
          %table{style:'width:70%; float:left; margin: 20px 0; text-align: right'}
            - @residential_services.each do |service|
              %tr{class:"#{cycle('','light-gray')}"}
                %td{style:'float: left'}= service
          %table{style:'float:right; margin: 20px 0; text-align: right'}
            - @residential_services.size.times do
              %tr
                %td{style:'float: right'}
                  %span{class:'glyphicon glyphicon-ok-sign'}
        %p
          %a.btn.btn-primary{:href => "#", :role => "button"} Button
          %a.btn.btn-default{:href => "#", :role => "button"} Button
  .col-sm-6.col-lg-4
    .thumbnail
      .circle_hover
        = image_tag("store.svg", size:'120x120')
      .caption
        %h3 Commercial
        .table_wrapper{style:'overflow: auto'}
          %table{style:'width:70%; float:left; margin: 20px 0; text-align: right'}
            - @commercial_services.each do |service|
              %tr{class:"#{cycle('','light-gray')}"}
                %td{style:'float: left'}= service
          %table{style:'float:right; margin: 20px 0; text-align: right'}
            - @commercial_services.size.times do
              %tr
                %td{style:'float: right'}
                  %span{class:'glyphicon glyphicon-ok-sign'}
        %p
          %a.btn.btn-primary{:href => "#", :role => "button"} Button
          %a.btn.btn-default{:href => "#", :role => "button"} Button

