%h1 gallery

- if @pictures.present?
  - @pictures.each do |p|
    .gallery_picture
      = image_tag p.image.url(:thumb), class: 'gallery_image', :'data-id' => p.id
      -if can? :manage, :all
        .gallery_overlay
          .glyphicon.glyphicon-trash
.gallery_picture_spinner
  .sk-folding-cube
    .sk-cube1.sk-cube
    .sk-cube2.sk-cube
    .sk-cube4.sk-cube
    .sk-cube3.sk-cube

- if can? :manage, :all
  = form_for Picture.new, url: pictures_create_path, html: { multipart: true } do |f|
    -#.field
    -#  = f.label :name
    -#  = f.text_field :name
    .field
      = f.label :image
      = f.file_field :image
    .actions
      = f.submit 'Upload Picture'
      = link_to 'Nevermind', root_path, class: 'button'